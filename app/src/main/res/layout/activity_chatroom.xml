<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".UI.ChatroomActivity">

        <ListView
            android:id="@+id/msgview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.31"
            android:background="@null"
            android:divider="@null"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll">

        </ListView>

        <include
            layout="@layout/message_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" />

    </LinearLayout>


    <!-- Side navigation drawer UI -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#ffeeeeee"
        android:orientation="vertical">

        <Button
            android:id="@+id/chatroomname_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chatroom Name"/>

        <Button
            android:id="@+id/events_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events (#)"/>

        <Button
            android:id="@+id/polls_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Polls (#)"/>

        <Button
            android:id="@+id/members_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Members"/>

        <Button
            android:id="@+id/leave_chat_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave chat" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>